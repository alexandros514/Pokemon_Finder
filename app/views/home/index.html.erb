<h1> Welcome to your Pokemon center </h1>


<%= form_with(url: root_path, method: :get) do |f| %>
  <%= f.search_field :q %>
  <%= f.submit("POKE IT") %>
<% end %>


<% if @pokemon.present? %>

  <hr>
  <% 7.times do %>
    <%= image_tag @pokemon_image %>
    <%= image_tag @pokemon_image_shiny %>
  <% end %>

  <hr>



<% end %>

<h1> My Pokemons </h1>

<table class="table table-dark table-striped">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Type</th>
    <th scope="col">Abilities</th>
    <th scope="col">Experience</th>
    <th scope="col">Weight</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @pokemon_name %></td>
    <td><%= @pokemon_types %></td>
    <td><%= @pokemon_ability %></td>
    <td><%= @pokemon_exp %></td>
    <td><%= @pokemon_weight %></td>
  </tbody>
</table>

<% if @pokemon_tcg.present? %>

  <% @pokemon_tcg_images.each do |image| %>
    <%= image_tag image %>
  <% end %>
  
<% end %>